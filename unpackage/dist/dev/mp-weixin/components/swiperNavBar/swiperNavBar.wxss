
.swiperHead scroll-view{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-flex-wrap: nowrap;
	        flex-wrap: nowrap;
	white-space: nowrap;
}
.swiperTab{
	position: relative;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: inline-flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	text-align: center;
	position: relative;
	letter-spacing: 1px;
	padding: 10rpx;
	margin-right: 74rpx;
}
.swiperLine{ 
	position: absolute;bottom: 
	0rpx;left: 
	0;right: 0;
	z-index: 10;
}
.swiperLineActive{ 
	margin: 0 auto;
	border-radius: 30rpx; 
	width:100%;
	height:4rpx;
	background-color: #536BFF;
}
@-webkit-keyframes currentLine{
0%{
		-webkit-transform: scale(0.5);
		        transform: scale(0.5);
}
100%{
		-webkit-transform: scale(1);
		        transform: scale(1);
}
}
@keyframes currentLine{
0%{
		-webkit-transform: scale(0.5);
		        transform: scale(0.5);
}
100%{
		-webkit-transform: scale(1);
		        transform: scale(1);
}
}
.currentLine{ 
	-webkit-animation:currentLine 300ms forwards; 
	        animation:currentLine 300ms forwards;
}

