page {
  background: #f5f5f5;
  font-size: 24rpx;
  color: #333;
  font-family: PingFangSC;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
/* 公共样式 */
.btn-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border: 1px solid #536BFF;
  height: 48rpx;
  border-radius: 24rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 0 22rpx;
  color: #536BFF;
}
.btn-item > image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 12rpx;
  vertical-align: middle;
}

